.intro
	margin 0 auto
	padding 6rem 1rem 3rem 1rem

	&__hed
		max-width 60rem
		margin 0 auto
		text-align center
		font-family $cooper
		set-type-size('x7-large', true)
		color $off-black

	&__space
		margin-bottom 3rem

	&__dek
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center

	&__byline
		max-width $column-width
		margin 0 auto
		//margin-top 1rem
		text-align center
		font-family $courier
		font-weight 700
		set-type-size('root', true)
		line-height 1.25
		color $off-black

	&__time
		display block
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center

	&__vidwrapper
		width 100%
		margin 5rem auto

		.player
			margin 0 auto
			max-width 900px

	&__text
			max-width $column-width
			margin 0 auto
			font-family $national
